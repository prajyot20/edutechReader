<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77B6EC"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edutech.map.com.ereader.HomeActivityWithDrawer"
    tools:showIn="@layout/app_bar_home_activity_with_drawer">

  <LinearLayout
    android:layout_width="368dp"
    android:layout_height="wrap_content"
     android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/filePath"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="255dp"
            android:layout_height="match_parent"
            android:background="@color/WhiteSmoke"
            android:gravity="center_vertical|center_horizontal"
            android:text="Click to Browse file"
            android:textColor="@color/Black"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/open_file"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Open File"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="40dp" />
    </LinearLayout>

      <TextView
          android:id="@+id/textView3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Recently Viewed File"

          android:textColor="@color/Black" />

      <android.support.v7.widget.ListViewCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_margin="2dp"
            android:divider="@color/LightGreen"
            android:id="@+id/lv_listfile">

        </android.support.v7.widget.ListViewCompat>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
